<%= form_with url: book_reviews_path(@book), method: :post do |f| %>
  <div>
    <%= f.label :rating, "Rating:", style: "display: block" %>
    <%= f.select :rating, (1..5).to_a %>
  </div>
  <div>
    <%= f.label :content, "Content:", style: "display: block" %>
    <%= f.text_field :content %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
