<p style="color: green"><%= notice %></p>

<%= turbo_frame_tag @book do %>
  <%= render @book %>

  <div>
    <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "Back", books_path %>
    <%= button_to "Destroy", @book, method: :delete %>
  </div>

  <div>
    <h3>Reviews</h3>
    <%= render "reviews_list" %>
    <%= render "review_form" %>
  </div>
<% end %>
